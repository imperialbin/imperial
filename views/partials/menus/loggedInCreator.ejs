<div class="menu">
  <div class="settings" id="accountDrop" style="display: none;">
    <ul class="account">
      <li class="setting" onclick="location.href='/account'">User settings</li>
      <li class="setting" onclick="location.href='/account#documentSettings'">Paste settings</li>
      <li class="setting" id="discord" onclick="window.open('https://imperialb.in/dsc', '_blank')">
        Discord</li>
      <% if(originalCreator===incomingUser) { %>
      <form class="deleteDocument" method="POST" action="/api/document/<%= documentName %>?_method=DELETE">
        <a href="javascript:$('.deleteDocument').submit()">
          <li class="deletePaste">Delete paste</li>
        </a>
      </form>
      <% } %>
      <div class="dumbLine"></div>
      <li class="setting" id="logoutBtn" onclick="location.href = '/logout?_method=DELETE'">Logout</li>
    </ul>
  </div>
  <div class="menu-content">
    <a class="bringToHome" href="/">
      <h6>IMPERIAL</h6>
    </a>
    <ul>
      <% if(!encrypted) { %>
      <li id="edit" class="tooltip" data-tippy-content="Edit document"> <button id="icon" class="editButton" onclick="editDocument()"><i
            class="fas fa-pencil-alt"></i></button></li>
      <% } %>
      <li id="compare" class="tooltip" data-tippy-content="Compare document"><button id="icon" onclick="toggleCompareDocuments('<%= documentName %>')"><i
            class="fas fa-clone"></i></button>
      </li>
      <li id="save" class="tooltip" data-tippy-content="Duplicate document"> <button id="icon" onclick="duplicateDocument()"><i class="fas fa-file-import"></i></i></button>
      </li>
      <li id="new" class="tooltip" data-tippy-content="New document"> <button id="icon" onclick="newDocument()"><i class="fas fa-file-alt fa-lg"></i></button> </li>
      <li id="account"> <img src="<%= pfp %>" alt="Profile picture" class="pfp" draggable="false"> </li>
    </ul>
  </div>
  <ul id="messages">
    <li class="message info">
      <i class="fas fa-trash" style="padding-right: 4px;" aria-hidden="true"></i>
      <%= deleteDate %>
    </li>
  </ul>
</div>