    <div class="documents">
      <h1 class="publicDocuments">Public Documents</h1>
      <% documents.forEach(document => { %>
      <a class="documentReference" href="/p/<%= document.URL %>">
        <div class="document">
          <img
            src="/assets/img/<%= document.URL%>.jpg"
            alt="Document"
            class="documentBanner"
          />
          <div class="bottomOfDocument">
            <h1 class="documentTitle">Document <%= document.URL%></h1>
            <span class="documentDate"
              >Created <%= new Date(document.dateCreated).getMonth() + 1 %>/<%=
              new Date(document.dateCreated).getDate() %>/<%= new
              Date(document.dateCreated).getFullYear() %></span
            >
          </div>
        </div>
      </a>
      <% }); %>
