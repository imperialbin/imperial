{
  "name": "imperial",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "install-packages": "yarn install && cd apps/api && yarn install && cd ../web && yarn install && cd ../docs && yarn install && cd ../bot && yarn install",
    "dev": "docker-compose up -d && turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "drizzle-orm": "^0.25.3"
  }
}
