{
  "name": "imperial",
  "version": "1.0.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "start": "turbo start",
    "build": "turbo build",
    "dev": "docker-compose up -d && turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "install:all": "yarn workspaces foreach install"
  },
  "devDependencies": {
    "prettier": "latest",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@3.5.0",
  "dependencies": {
    "drizzle-orm": "^0.26.2"
  }
}
