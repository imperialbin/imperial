{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react",
    "module": "commonjs",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "@imperial/commons": ["../../packages/commons"],
      "@imperial/internal": ["../../packages/internal"]
    }
  },
  "include": ["."],
  "exclude": ["node_modules", "./dist/**/*"]
}
